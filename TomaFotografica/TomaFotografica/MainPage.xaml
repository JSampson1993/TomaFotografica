<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TomaFotografica.MainPage">

    <StackLayout>
        <Image
            x:Name="image1" HeightRequest="300"
            ></Image>
        <Label Text="Nombre" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
        <Entry Text=""  Keyboard="Text" x:Name="txtnombre"/>

        <Label Text="Descripcion" TextColor="Black" FontSize="20" FontAttributes="Bold"/>
        <Entry Text=""  Keyboard="Text" x:Name="txtdcorta"/>

        <Button
            Text="Tomar Foto" BackgroundColor="#4afde7" TextColor="black" FontSize="18"
            Clicked="Button_Clicked"
            ></Button>
        <Button
            Text="Cargar Foto" BackgroundColor="#4afde7" TextColor="black" FontSize="18"
            Clicked="Button_Clicked_1"
            ></Button>
        <Button Text="guardar foto" BackgroundColor="#4afde7" TextColor="black" FontSize="18" Clicked="Button_Clicked_2"></Button>

    </StackLayout>

</ContentPage>
